{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  packageRules: [
    {
      matchUpdateTypes: ["major"],
      labels: ["type/major"],
    },
    {
      matchUpdateTypes: ["minor"],
      labels: ["type/minor"],
    },
    {
      matchUpdateTypes: ["patch"],
      labels: ["type/patch"],
    },
    {
      matchUpdateTypes: ["digest"],
      labels: ["type/digest"],
    },
    {
      matchUpdateTypes: ["lockFileMaintenance"],
      labels: ["type/lockfile"],
    },
    {
      matchDatasources: ["docker"],
      addLabels: ["renovate/container"],
    },
    {
      matchDatasources: ["helm"],
      addLabels: ["renovate/helm"],
    },
    {
      matchDatasources: ["galaxy", "galaxy-collection"],
      addLabels: ["renovate/ansible"],
    },
    {
      matchDatasources: ["terraform-provider"],
      addLabels: ["renovate/terraform"],
    },
    {
      matchDatasources: ["github-releases", "github-tags"],
      addLabels: ["renovate/github-release"],
    },
    {
      matchManagers: ["github-actions"],
      addLabels: ["renovate/github-action"],
    },
    {
      matchDatasources: ["pypi"],
      addLabels: ["renovate/pip"],
    },
    {
      matchManagers: ["nix"],
      addLabels: ["renovate/nix"],
    },
    {
      matchManagers: ["cargo"],
      addLabels: ["renovate/cargo"],
    },
    {
      matchDatasources: ["npm"],
      addLabels: ["renovate/npm"],
    },
    {
      matchDatasources: ["go"],
      addLabels: ["renovate/golang"],
    },
    {
      matchManagers: ["gomod"],
      addLabels: ["renovate/golang"],
    },
    {
      matchDatasources: ["maven"],
      addLabels: ["renovate/maven"],
    },
    {
      matchDatasources: ["gradle"],
      addLabels: ["renovate/gradle"],
    },
    {
      matchDatasources: ["nuget"],
      addLabels: ["renovate/nuget"],
    },
    {
      matchDatasources: ["packagist"],
      addLabels: ["renovate/php"],
    },
    {
      matchDatasources: ["rubygems"],
      addLabels: ["renovate/ruby"],
    },
    {
      matchManagers: ["dockerfile"],
      addLabels: ["renovate/dockerfile"],
    },
    {
      matchManagers: ["kubernetes"],
      addLabels: ["renovate/kubernetes"],
    },
  ],
}
